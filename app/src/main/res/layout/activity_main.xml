<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mSrlRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="8dp">

            <com.fphoenixcorneae.bannerlayout.widget.BannerLayout
                android:id="@+id/mBlBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="215dp"
            android:divider="@drawable/shape_divider"
            android:orientation="horizontal"
            android:showDividers="middle|beginning|end">

            <Button
                android:id="@+id/mBtnStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start"
                android:textAllCaps="false"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/mBtnStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop"
                android:textAllCaps="false"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/mBtnUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update"
                android:textAllCaps="false"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>

        <Spinner
            android:id="@+id/mSpSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="15dp"
            android:entries="@array/transformer" />
    </FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>